<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/margin_xsmall"
            android:background="@drawable/gradient_vertical_blue"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/monitoringtext"
                android:textColor="@color/almost_white"
                android:textSize="@dimen/text_size_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="17dp"
                android:paddingBottom="15dp">

                <ImageView
                    android:id="@+id/back"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/back"
                    android:tint="@color/white" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:paddingVertical="@dimen/margin_large"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/margin_large"
        android:textSize="@dimen/text_size_large"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_regular"
        android:background="@color/red_soft"
        android:text="@string/list_Dates"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_fechas"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>