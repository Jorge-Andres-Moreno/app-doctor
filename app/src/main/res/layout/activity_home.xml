<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/act_home">

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/body_bigger"
        android:background="@color/blue"
        android:fitsSystemWindows="true"
        tools:openDrawer="start">

        <android.support.design.widget.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:menu="@menu/navigation_menu"
            android:layout_gravity="start"
            app:headerLayout="@layout/nav_header"
            android:id="@+id/nv">

        </android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/drawer_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:fontFamily="@font/montserrat_medium"
            android:paddingVertical="@dimen/margin_small"
            android:paddingLeft="@dimen/size_m"
            android:text="@string/patientlist"
            android:textColor="@color/almost_white"
            android:textSize="@dimen/text_size_normal" />

        
        <LinearLayout
            android:id="@+id/not_found_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/page_not_found"/>

            <TextView
                android:id="@+id/passwordLost"
                android:layout_width="@dimen/body_xhuge"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/text_size_ant"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:text="@string/deviceLost"
                android:textSize="@dimen/text_size_normal" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>