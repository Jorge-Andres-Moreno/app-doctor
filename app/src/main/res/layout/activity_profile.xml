<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<!--
    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/body_bigger"
        android:background="@color/white"
        android:elevation="15dp"
        android:fitsSystemWindows="true"
        tools:openDrawer="start">


    </android.support.v4.widget.DrawerLayout>
-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ><!--android:layout_below="@id/drawer_layout"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:fontFamily="@font/montserrat_medium"
                android:paddingVertical="@dimen/margin_small"
                android:paddingLeft="@dimen/size_m"
                android:text="@string/personal_information"
                android:textColor="@color/almost_white"
                android:textSize="@dimen/text_size_normal" />

            <ImageView
                android:id="@+id/image_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_default"
                android:src="@drawable/image_example" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:fontFamily="@font/montserrat_medium"
                android:paddingLeft="@dimen/size_m"
                android:text="@string/name"
                android:textColor="@color/blue_strong"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_m"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/rounded_corners"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:fontFamily="@font/montserrat_medium"
                android:paddingLeft="@dimen/size_m"
                android:text="@string/email"
                android:textColor="@color/blue_strong"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/correo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_m"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/rounded_corners"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:fontFamily="@font/montserrat_medium"
                android:paddingLeft="@dimen/size_m"
                android:text="@string/state"
                android:textColor="@color/blue_strong"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_m"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/rounded_corners"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:fontFamily="@font/montserrat_medium"
                android:paddingLeft="@dimen/size_m"
                android:text="@string/city"
                android:textColor="@color/blue_strong"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_m"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/rounded_corners"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:fontFamily="@font/montserrat_medium"
                android:paddingLeft="@dimen/size_m"
                android:text="@string/adress"
                android:textColor="@color/blue_strong"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_m"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/rounded_corners"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:fontFamily="@font/montserrat_medium"
                android:paddingLeft="@dimen/size_m"
                android:text="@string/cellphone"
                android:textColor="@color/blue_strong"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_m"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/rounded_corners"/>

            <Button
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/size_l"
                android:layout_marginBottom="@dimen/margin_default"
                android:background="@drawable/rounded_circle_blue"
                android:elevation="15dp"
                android:fontFamily="@font/montserrat_medium"
                android:paddingHorizontal="@dimen/body_petit"
                android:paddingVertical="@dimen/text_size_medium"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>