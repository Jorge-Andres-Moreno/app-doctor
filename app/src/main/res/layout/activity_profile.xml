<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:fontFamily="@font/montserrat_medium"
                android:paddingVertical="@dimen/margin_small"
                android:paddingLeft="@dimen/size_m"
                android:text="@string/personal_information"
                android:textColor="@color/almost_white"
                android:textSize="@dimen/text_size_normal" />

            <ImageView
                android:id="@+id/image_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_default"
                android:src="@drawable/image_example" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:fontFamily="@font/montserrat_medium"
                android:paddingLeft="@dimen/size_m"
                android:text="@string/name"
                android:textColor="@color/blue_strong"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_m"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/rounded_corners"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:fontFamily="@font/montserrat_medium"
                android:paddingLeft="@dimen/size_m"
                android:text="@string/email"
                android:textColor="@color/blue_strong"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/correo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_m"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/rounded_corners"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:fontFamily="@font/montserrat_medium"
                android:paddingLeft="@dimen/size_m"
                android:text="@string/cc"
                android:textColor="@color/blue_strong"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/cedula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_m"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/rounded_corners"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:fontFamily="@font/montserrat_medium"
                android:paddingLeft="@dimen/size_m"
                android:text="@string/skill"
                android:textColor="@color/blue_strong"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/especialidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_m"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/rounded_corners"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:fontFamily="@font/montserrat_medium"
                android:paddingLeft="@dimen/size_m"
                android:text="@string/cellphone"
                android:textColor="@color/blue_strong"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_m"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/rounded_corners"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:fontFamily="@font/montserrat_medium"
                android:paddingLeft="@dimen/size_m"
                android:text="@string/patients"
                android:textColor="@color/blue_strong"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/paciente"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="@dimen/size_m"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/rounded_corners"/>

            <Button
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/size_l"
                android:layout_marginBottom="@dimen/margin_default"
                android:background="@drawable/rounded_circle_blue"
                android:elevation="15dp"
                android:fontFamily="@font/montserrat_medium"
                android:paddingHorizontal="@dimen/body_petit"
                android:paddingVertical="@dimen/text_size_medium"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>